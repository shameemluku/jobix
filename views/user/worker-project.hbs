    var amount = document.getElementById('amountTxt').innerHTML
    var fee = amount * 0.1;
    document.getElementById('bcomiTxt').innerHTML = fee;
    document.getElementById('bestimateTxt').innerHTML = parseFloat(amount) - parseFloat(fee);
</script>



