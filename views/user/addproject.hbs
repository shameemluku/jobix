<div id="page-container">
  <div id="content-wrap">

  {{#if isHost}}{{>sec-nav-host}}{{else}}{{>sec-nav-worker}}{{/if}}

  <!-- Home starts -->

  


<!-- ///////////////////////// -->



<div class="container ">

  <div class="container d-flex p-0 mt-4 bg-dark">
    <span class="step d-flex justify-content-center align-items-center"><i class="far fa-info-circle mr-2"></i>Project Details</span>
    <span class="step d-flex justify-content-center align-items-center"><i class="fas fa-list mr-2"></i>Type of Project</span>
    <span class="step d-flex justify-content-center align-items-center"><i class="fal fa-usd-circle mr-2"></i>Payment Details</span>

  </div>

  <div class="formCont w-100">
  <form class="regForm" id="regForm" name="regForm"  method="post" enctype="multipart/form-data">
  
  
    <!-- <h1 id="headingAdd">Register:</h1> -->
    <!-- One "tab" for each step in the form: -->
    <div class="tab">
      <label>Choose a name for your project:</label>
      <p><textarea class="variElem" type="textarea" placeholder="Project heading here.." oninput="this.className = ''" name="pheading" required></textarea></p>
      <label>Tell us more about your project:</label>
      <p><textarea class="variElem" placeholder="Describe project here.." oninput="this.className = ''" name="pdetails" required></textarea></p>
      <label>Upload supporting files for your project (Compressed files only):</label>
      <input type="file" id="myfile" name="file" accept=".zip,.rar,.7zip" required>
    </div>


    <!-- ////////////// -->

    <div class="tab">

      <p>Select the skills required for your project</p>

      <!-- ///////////////  SEARCH SKILLS  ////////////////// -->

      <div class="select-box mb-3">
        <div class="options-container active">
          
          {{#each skills}}

          <div class="option">
            <input type="checkbox" class="radio" id="{{this.code}}" name="skills" value="{{this.code}}" />
            <label for="{{this.code}}">{{this.name}}</label>
          </div>

          {{/each}}

          
        </div>



        <div class="search-box">
          <input type="text" placeholder="Search skills.." />
        </div>
      </div>
    </div>
            

    



    <!-- ////////////// -->

    <div class="tab">
      <p><label for="dueDate">When you are going to end this project:</label>
      <input type="date" id="dueDate" name="dueDate"  required></p>
      <p><label for="dueDate">Enter the reward amount (in â‚¹):</label>
      <input type="number" min="1" step="any" name="amount"/></p>

    </div>


    
    <div style="overflow:auto;">
      <div style="float:right;">
        <button type="button" class="btn-addPro" id="prevBtn" onclick="nextPrev(-1)">Previous</button>
        <button type="button" class="btn-addPro" id="nextBtn" onclick="nextPrev(1)">Next</button>
      </div>
    </div>
    <!-- Circles which indicates the steps of the form: -->
    
  </form>
</div>


<div id="loading-div" class="container p-0" style="display:none">
      
        <div class="row d-flex justify-content-center">
          <img src="images/site/mail.gif" height="200px" draggable="false">
        </div>
          <p class="m-0 w-100 text-center mb-3" style="font-weight: 500; color:rgb(112, 64, 0)">We are creating your project. Almost there, Relax</p>
        <div class="progress">
          <div class="progress-bar" role="progressbar" id="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
        </div>
      </div>

      <p id="successMsg" class="text-success"></p>

</div>


<div class="container mt-5" id="success-addpro" style="display: none;">
        <div id="loadingDiv" class="row p-3">

          <p class="text-center w-100 m-0"><i class="fas fa-check-circle"  style="font-size:100px; color:rgb(29, 168, 52)"></i></p>
          <p class="text-center w-100 mt-3" style="font-size:35px; color:rgb(83, 83, 83); font-weight:500;">Success!</p>
          <p class="text-center w-100 mt-0" style="font-size:18px; color:rgb(83, 83, 83);">Project added! please wait, redirecting</p>
          
    
        </div>
      </div>

</div>
{{>user-footer}}
</div>





