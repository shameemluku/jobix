<div id="page-container">
  <div id="content-wrap">

    {{>sec-nav-worker}}

  <!-- Home starts -->



    <div class="container">
      <div class="row">

        <!-- SIDE BAR RIGHT -->

        <div class="col-lg-3" style="margin-top:20px">

          <div class="holder project-contest">

            <!-- Saved -->
            <div class="card card-custom " style="width: 100%;">
              
              <div class="card-body">

                <p class="subTitle pColor mb-0"><i class="fas fa-heart-circle mx-2"></i>Saved Projects<span id="saveCount" class="badge badge-secondary ml-2">{{saveCount}}</span></p>

              </div>
            </div>

            <!-- saved ends -->

            <!-- FILTER -->

            <div class="card card-custom " style="width: 100%;">
              
              <div class="card-body">

                <span class="filterHead"><i class="far fa-filter"></i>Filters</span>

                <div class="line mt-2"></div>

                <p class="subTitle mt-3 pColor">Skills type</p>

                

                <!-- ///////////////  SEARCH SKILLS  ////////////////// -->


                <div class="container p-0">

                  <div class="row  mt-2">
                    <form class="w-100" id="filterForm">
      
                      <div class="container">
      
                        <!-- SKILLS -->
      
                        <div class="select-box">
                          <div class="options-container active">
                            
                            {{#each skills}}
                            <div class="option">
                              <input type="checkbox" class="radio" id="{{this.code}}" name="skills" value={{this.code}} checked/>
                              <label for="{{this.code}}">{{this.name}}</label>
                            </div>
                            {{/each}}
      
                           
                          </div>
      
      
      
                          <div class="search-box">
                            <input type="text" placeholder="Start Typing..." />
                          </div>
                        </div>
                      </div>
      
                  </div>
                  <!-- SKILLS END -->


                  {{!-- REWARD --}}

                      <p class="subTitle mt-2 pColor">Reward Amount</p>

                <div class="skill-select ml-2">
                    <input type="radio" id="all" name="amount" value="1" checked>
                    <label class="ml-1" for="all"> All</label><br>
                    <input type="radio" id="skill1" name="amount" value="2">
                    <label class="ml-1" for="skill1"> Below $500</label><br>
                    <input type="radio" id="skill2" name="amount" value="3">
                    <label class="ml-1" for="skill2"> $500 - $1000</label><br>
                    <input type="radio" id="skill3" name="amount" value="4">
                    <label class="ml-1" for="skill3"> $1000 - $5000</label><br>
                    <input type="radio" id="skill4" name="amount" value="5">
                    <label class="ml-1" for="skill4"> Above $5000</label><br>
                    
                </div>


                  {{!-- END REWARD --}}
      
                  <button class="mt-2 w-100 applyBtn" type="submit" value="Submit">Apply</button>
      
      
                  </form>
                </div>
                



                <!-- ////////////////////////////////////// -->

              </div>
            </div>

            <!-- Filter End -->


            


      
            

          </div>


        </div>
        <!-- SIDE BAR ENDS -->

        <div class="col-lg-9">

          <div class="container wrapper">
            <h1 class="windowHeading"><i class="fas fa-list-ul"></i>Browse Projects</h1>
          </div>

          <div id="round-loader" class="container w-100 text-center" style="display:none"><div class="lds-ripple"><div></div><div></div></div></div>

        <div id="card-Holder">

        {{#each projects}}
          <!-- Project card 1 -->
          <div class="card card-custom" style="width: 100%">
            <div class="card-body">
              <div class="container">

                <div class="row">
                  <div class="col-8">
                    <span class="proTitle">{{this.pheading}}</span>
                  </div>
                  <div class="d-flex col-4 justify-content-end align-items-start">
                    {{#if this.saved}}
                     <button id="save{{this._id}}" class="heartBtn text-center p-1 d-none" onclick="saveProject('{{this._id}}')"><i class="fal fa-heart-circle"></i></button>
                    <button id="unsave{{this._id}}" class="heartBtn text-center p-1" onclick="unsaveProject('{{this._id}}')"><i class="fas fa-heart-circle" style="color: #003049;"></i></button>
                    {{else}}
                    <button id="save{{this._id}}" class="heartBtn text-center p-1" onclick="saveProject('{{this._id}}')"><i class="fal fa-heart-circle"></i></button>
                    <button id="unsave{{this._id}}" class="heartBtn text-center p-1 d-none" onclick="unsaveProject('{{this._id}}')"><i class="fas fa-heart-circle" style="color: #003049;"></i></button>
                    {{/if}}
                    
                  </div>
                </div>

                <div class="row">
                    <div class="skills-list">
                        {{#each skillsArray}}
                        <span>{{this.name}}</span>
                        {{/each}}
                    </div>
                </div>


                <div class="row">
                  <div class="col-sm-9">
                    <span class="descTxt"><p>{{this.pdetails}}</p></span>
                  </div>
                  <div class="d-flex col-sm-3 justify-content-end align-items-end amount">
                      <h4>â‚¹{{this.amount}}</h4>
                  </div>
                </div>


                <div class="row">
                  <div class="col">
                    <span class="bidsCount"><p> <i class="fas fa-user-plus"></i><strong>
                      {{this.bidCount}}
                    </strong> Bids</p></span>
                  </div>

                  <a class="learnmoreBtn" href="/project-details?id={{this._id}}&hId={{this.host}}&skills={{this.skills}}">Learn more <i class="fas fa-angle-double-right ml-1"></i></a>
                </div>

              </div>
            </div>
          </div>
        {{/each}}
          <!-- Card ends here -->


         </div> 
          

        </div>
        <!-- COLUMN 9 ends here -->

        

      </div>

      
    </div>


    <div id="snackbar"></div>



</div>
</div>