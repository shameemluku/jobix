<script >

window.addEventListener('load', (event) => {

    document.getElementById("activeTab").style.display = "block";
    document.getElementById("completeTab").style.display = "none";
       
});

function ActiveTab() {
   
   document.getElementById("activeTab").style.display = "block";
   document.getElementById("completeTab").style.display = "none";
   document.getElementById("activeBtn").classList.add("active");
   document.getElementById("completeBtn").classList.remove("active");
   
}

function completeTab() {
    document.getElementById("completeTab").style.display = "block"
    document.getElementById("activeTab").style.display = "none";
    document.getElementById("activeBtn").classList.remove("active");
    document.getElementById("completeBtn").classList.add("active");
}



 </script>