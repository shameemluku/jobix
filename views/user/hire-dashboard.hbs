<!-- Second Nav -->
<div class="container-fluid d-flex secNav">
  <div class="mr-auto p-2 l-links">

    <a class="p-2" href="#">Find Freelancers</a>

  </div>
  <div class="p-2 r-link">
    <i class="fal fa-wallet"></i><span>Wallet:</span>
    <span class="bal">$10</span>
  </div>

</div>

<!-- Home starts -->

<div class="container mt-4">
  <h1 class="windowHeading"><i class="fas fa-tasks mr-3"></i>Projects</h1>
</div>

<div class="container mb-5">
  <div class="row">

    <div class="col-md-9">

      {{!-- <div class="card-head d-flex" style="width: 100%">
        <!--  -->

        <div class="mr-auto p-2 activePending">

          <a class="activeBtn" style="color: #003049;" href="">Active</a>
          <a class="PendingBtn" style="color: #003049;" href="">Pending</a>

        </div>
        <!--  -->
      </div> --}}

      {{#if empty}}
        <div class="container w-100 d-flex justify-content-center"><img
            src="images/site/empty.png"
            width="70%"
          /></div>

      {{/if}}

   
      <!-- Project card 1 -->

      <table class="user-table w-100 display" id="table_id">
        <thead>
          <tr class="heading-row">
            <th>
              Project Id:
            </th>
            <th>
              Title
            </th>
          </tr>
        </thead>
        <tbody>
          
        {{#each hostedProjects}}
          <tr class="table-row">
            <td class="td-id" style="width:100px; white-space: initial;">
              {{this._id}}
            </td>
            <td>
              <div class="w-100">

                <div class="container">
                    <div class="row">
                        <div class="col-10">
                           <p class="mb-0 t-card-head">{{this.pheading}}</p> 
                        </div>
                        <div class="col-2">
                            <span style="color: rgba(143, 89, 18, 0.788); font-weight:600; font-size:19px">â‚¹ {{this.amount}}</span>
                        </div>
                    </div>
                    <div class="row">
                      <div class="col mt-3">
                        <span class="t-bidCount"><i class="fal fa-user"></i>&nbsp; <b>{{this.bidCount}}</b> &nbsp;bids</span>
                        <span class="t-saveCount ml-1"><i class="fal fa-heart"></i>&nbsp; <b>&nbsp;{{this.saveCount}}</b></span>           
                      </div>
                    </div>

                    <div class="row">
                      <div class="col mt-3">
                        <a href="/bid-details?id={{this._id}}" class="t-viewBtn w-sm-100" style="float: right;">view details</a>          
                      </div>
                    </div>

                </div>
              </div>
              
            </td>
          </tr>

            <!-- Card ends here -->
        {{/each}}

        </tbody>
      </table>

    </div>

    <!-- SIDE BAR RIGHT -->

    <div class="col-md-3">

      <div class="holder project-contest sticky">

        <!-- Working On -->

        <div class="card card-custom proCard" style="width: 100%;">
          <div class="card-body">
            <p id="nameTxt">Hi {{name}},</p>
            <p id="wishTxt"></p>

            <div class="w-100 d-flex justify-content-end">
              {{#if work}}<a class="switchBtn" href="/work-dashboard">Switch to work</a>{{else}}<a class="switchBtn" href="/select-skills">Start working</a>{{/if}}
            </div>
          </div>
        </div>

        {{!-- White card --}}

        <div class="card card-custom" style="width: 100%;">
          <div class="d-flex w-100 justify-content-center pt-2">
            <h5 class="card-title" style="font-size: 16px; color: #7E7E7E;">As
              worker</h5>
          </div>
          <div class="line"></div>
          <div class="card-body">

            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse3">Project
                  <span class="count">0</span></a>
              </h4>
            </div>
            <div id="collapse3" class="panel-collapse collapse">
              <div class="panel-body">Active</div>
              <div class="panel-body">Completed</div>
            </div>

            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse4">Hosted
                  <span class="count">0</span></a>
              </h4>
            </div>
            <div id="collapse4" class="panel-collapse collapse">
              <div class="panel-body">Active</div>
              <div class="panel-body">Completed</div>
            </div>

          </div>
        </div>

        {{!-- end working --}}

      </div>

    </div>

  </div>
</div>